#!/bin/bash
mkdir -p $SNAP_DATA/var/run/openvswitch/

while [ ! -f $SNAP/bin/ovs-vswitchd ]; do
	sleep 1
done

while [ ! -S $SNAP_DATA/var/run/openvswitch/db.sock ]; do
    sleep 1
done
ovs-vsctl --no-wait init

if [ -f "$SNAP_DATA/var/run/openvswitch/vswitchd.pid" ]; then
    grep "ovs-vswitchd" /proc/`cat ${SNAP_DATA}/var/run/openvswitch/vswitchd.pid`/cmdline
    if [ "$?" == "0" ]; then
        echo "ovs-switchd seems already running"
        exit 0
    else
        echo "the switchd is dead, long live the switchd"
    fi
fi

$SNAP/bin/ovs-vswitchd --pidfile=${SNAP_DATA}/var/run/openvswitch/vswitchd.pid --unixctl=/var/run/openvswitch/vswitch.ctl unix:/var/run/openvswitch/db.sock
